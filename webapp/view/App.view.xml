<mvc:View controllerName="employees.controller.App"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    >
    
    <Shell>
        <App>

            <pages>
                <Page id="page" title="{i18n>tituloEmployee}">
                    <content>
                    <HBox>
                        <Label id="lblEmployee" text = "{i18n>labelEmployee}" class="sapUiSmallMargin"/>

                        <Input id="inputEmployee" class="sapUiSmallMarginEnd" maxLength="6" width="200px" 
                         value="{jsonCountries>/EmployeeId}"/>

                        <Label id="lblCountry" text = "{i18n>labelCountry}" visible="false" class="sapUiSmallMargin"/>

                        <Select id="selectCountry" 
                        items="{jsonCountries>/ListCountry}"
                        selectedKey="{jsonCountries>/CountryKey}"
                        forceSelection="false"
                        visible="true"        
                        >
                        <items>
                            <core:Item key="{jsonCountries>Key}" text="{jsonCountries>Text}" />                            
                        </items>
                        </Select>

                        <Button id="buttonSearch" class = "sapUiSmallMarginEnd" 
                        icon="sap-icon://search" press="onFilter"/>

                        <Button id="buttonClear" class = "sapUiSmallMarginEnd" 
                        icon="sap-icon://clear-filter" press="onClearFilter"/>


                         </HBox>

                     <HBox>
                        <Panel>
                            <content>   
                            <Button id="btnShowCity" class = "sapUiSmallMarginEnd" 
                            text="Show City" press="onShowCity" visible="{jsonConfig>/visibleBtnShowCity}"/>

                            <Button id="btnHideCity" class = "sapUiSmallMarginEnd" 
                            text="Hide City" press="onHideCity" visible="{jsonConfig>/visibleBtnHideCity}"/>

                            <Table id="tableEmployee" items="{jsonEmployees>/Employees}"
                            headerText="Employees:({jsonEmployees>/Amount})">
                                <columns>
                                    <Column visible="{jsonConfig>/visibleID}"><Text text="{i18n>TableId}"/></Column>
                                    <Column visible="{jsonConfig>/visibleName}"><Text text="{i18n>TableName}"/></Column>
                                    <Column visible="{jsonConfig>/visibleCountry}"><Text text="{i18n>TableCountry}"/></Column>
                                    <Column visible="{jsonConfig>/visibleCity}"><Text text="{i18n>TableCity}"/></Column>

                                </columns>
                                <items>
                                    <ColumnListItem press="onShowOrders" type="Active">
                                        <cells>
                                        <ObjectIdentifier title="{jsonEmployees>EmployeeID}"/>
                                        <Text text="{jsonEmployees>FirstName} {jsonEmployees>LastName}"/>
                                        <Text text="{jsonEmployees>Country}"/>
                                        <Text text="{jsonEmployees>City}"/>
                                        </cells>
                                    </ColumnListItem>                                    
                                </items>
                            </Table>
                            <HBox id="OrderTable"/>
                            </content>
                        </Panel>
                    </HBox>
                    </content>
                </Page>
            </pages>            
        </App>
    </Shell>
</mvc:View>
